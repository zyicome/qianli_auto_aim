<?xml version="1.0" encoding="utf-8"?>

<robot name="rm_gimbal"
  xmlns:xacro="http://ros.org/wiki/xacro">

  <link name="odom" />

  <link name="big_odom" />

  <joint name="big_odom_joint" type="fixed">
    <origin xyz="0.000 -0.01 0.000" rpy="0.0 0.0 0.0" />
    <parent link="odom" />
    <child link="big_odom" />
  </joint>

  <link name="yaw_gimbal_link" />

  <joint name="yaw_gimbal_joint" type="floating">
    <parent link="odom" />
    <child link="yaw_gimbal_link" />
  </joint>

  <link name="pitch_gimbal_link" />

  <joint name="pitch_gimbal_joint" type="fixed">
    <origin xyz="0.000 0.000 0.000" rpy="0.0 0.0 0.0" />
    <parent link="yaw_gimbal_link" />
    <child link="pitch_gimbal_link" />
  </joint>

  <link name="gimbal_link" />

  <joint name="gimbal_joint" type="floating">
    <parent link="pitch_gimbal_link" />
    <child link="gimbal_link" />
  </joint>

  <link name="camera_link" />

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.085 0.000  0.035" rpy="0.0  ${pi / 360}  ${pi / 120}" />
    <parent link="gimbal_link" />
    <child link="camera_link" />
  </joint>

  <link name="camera_optical_frame" />

  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}" />
    <parent link="camera_link" />
    <child link="camera_optical_frame" />
  </joint>

  <link name="shoot" /> 

  <joint name="shoot_joint" type="fixed">
    <origin xyz="0.085 0.000  0.035" rpy="0.0  0.0  0.0" />
    <parent link="gimbal_link" />
    <child link="shoot" />
  </joint>

  <link name="horizontal_camera_link" />

  <joint name="horizontal_camera_joint" type="floating">
    <parent link="camera_optical_frame" />
    <child link="horizontal_camera_link" />
  </joint>

</robot>
